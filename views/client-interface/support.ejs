<!DOCTYPE html>
<html lang="en">
  <head>
    <title>BookVerse - Support</title>

    <link rel="icon" type="image/x-icon" href="/assets/logo/logo_favicon.png" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="BookVerse Support – FAQs, help center, and customer assistance for Lebanon’s most modern online bookstore."
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/styles/client-styles.css" />
  </head>

  <body>
    <%- include('includes/header') %>

    <main>
      <div class="container support_container py-5">
        <h2>Got Questions? We’ve Got Answers!</h2>
        <br />

        <section class="accordion" id="accordionPanelsStayOpenExample">
          <% if (faqs && faqs.length > 0) { %>
          <% faqs.forEach((faq, index) => { %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="heading<%= index %>">
              <button
                class="accordion-button <%= index === 0 ? '' : 'collapsed' %>"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapse<%= index %>"
                aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
                aria-controls="collapse<%= index %>"
              >
                <%= faq.question %>
              </button>
            </h2>
            <div
              id="collapse<%= index %>"
              class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
              aria-labelledby="heading<%= index %>"
            >
              <div class="accordion-body">
                <%= faq.answer %>
              </div>
            </div>
          </div>
          <% }) %>
          <% } else { %>
          <p>No FAQs available at the moment.</p>
          <% } %>
        </section>

        <hr class="my-5" />

        <section class="support-contact text-center">
          <h2>Still need help? We’re always here for you!</h2>
          <br />
          <a href="/contact" class="button-1">Reach Out to Us</a>
        </section>
      </div>
    </main>

    <%- include('includes/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
